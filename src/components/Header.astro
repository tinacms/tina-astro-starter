---
import HeaderLink from "./HeaderLink.astro";
import config from "../content/config/config.json";
import IconLink from "./react/IconLink";
---

<header role="banner">
	<nav aria-label="Main navigation">
		<h2><a href="/">{config.seo.title}</a></h2>
		<div class="internal-links">
			{
				config.nav.map((nav) => (
					<HeaderLink href={nav.link}>{nav.title}</HeaderLink>
				))
			}
		</div>
		<div class="social-links">
			{
				config?.contactLinks?.map((link) => {
					return (
						<IconLink {...link} />
					);
				})
			}
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: rgb(var(--black));
		border-bottom: 4px solid transparent;
		text-decoration: none;
		font-weight: 500;
		transition: color 0.2s ease, border-bottom-color 0.2s ease;
	}
	nav a:hover {
		color: var(--accent-dark);
		border-bottom-color: var(--accent-dark);
	}
	nav a:focus {
		outline: 2px solid var(--focus-outline);
		outline-offset: 2px;
	}
	nav a.active {
		color: var(--accent-accessible);
		text-decoration: none;
		border-bottom-color: var(--accent-accessible);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
